// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  configFile = "prisma.config.ts"
}

datasource db {
  provider = "sqlite"
}

enum UserRole {
  REGULAR
  WHOLESALER
  DISTRIBUTOR
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      UserRole @default(REGULAR)
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id                      String      @id @default(cuid())
  product_id_str          String      @unique
  brand                   String
  name                    String
  salt                    String
  pack_size               String
  price_mrp               Float
  moq                     Int
  stock_qty               Int
  category                String
  image                   String
  stock_badge             String
  is_prescription_required Boolean?
  gst_rate                Float
  hsn_code                String
  pricing                 Json
  batches                 Json?
  orderItems              OrderItem[]
  createdAt               DateTime    @default(now())
  updatedAt               DateTime    @updatedAt
}

model Order {
  id         String      @id @default(cuid())
  user       User        @relation(fields: [userId], references: [id])
  userId     String
  totalPrice Float
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  items      OrderItem[]
}

model OrderItem {
  id        String  @id @default(cuid())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
  product   Product @relation(fields: [productId], references: [id])
  productId String
  quantity  Int
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}